<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/breweryListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/breweryListViewMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/view_on_map"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/breweryListDistance"
            app:layout_constraintTop_toBottomOf="@+id/breweryListDistance"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/breweryListFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_favorites"
            app:layout_constraintBottom_toBottomOf="@+id/breweryListViewMap"
            app:layout_constraintEnd_toEndOf="@+id/breweryListDistance"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/breweryListViewMap"
            app:layout_constraintTop_toTopOf="@+id/breweryListViewMap"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/breweryListDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/breweryListFoodCider"
            app:layout_constraintStart_toStartOf="@+id/breweryListFoodCider"
            app:layout_constraintTop_toBottomOf="@+id/breweryListFoodCider" />

        <TextView
            android:id="@+id/breweryListFoodCider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/breweryListTitle"
            app:layout_constraintStart_toStartOf="@+id/breweryListTitle"
            app:layout_constraintTop_toBottomOf="@+id/breweryListTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>